<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" alignment="CENTER" prefWidth="950" prefHeight="600"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vuelos.main.ListarPasajerosController">
    <children>
        <!-- Botón para cerrar la ventana -->
        <Button text="Cerrar" onAction="#handleCerrarVentana"/>
        <!-- Tabla para mostrar los pasajeros -->
        <TableView fx:id="pasajerosTable" prefWidth="850" prefHeight="300">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100"/>
                <TableColumn fx:id="colApellido" text="Apellido" prefWidth="100"/>
                <TableColumn fx:id="colFechaNacimiento" text="Fecha de Nacimiento" prefWidth="120"/>
                <TableColumn fx:id="colTipoDocumento" text="Tipo de Documento" prefWidth="120"/>
                <TableColumn fx:id="colNumeroDocumento" text="Número de Documento" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
            </columns>
        </TableView>
    </children>
</VBox>
